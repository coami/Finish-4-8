<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td> <%= book.title %></td>
        <td> <%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
<div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
    ·<%= message %><br>
    <% end %>
<% end %>
</div>

<%= form_with model: @book, url:'/books', local:true do |f| %>
<form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="iQcTF+BRZnEmNaJavUGill/yC3OlfRyq/dD9vkE94wLoK0L1bZddgLm315aqgL0MyKx+cNxZBt97AfcGs+9q7Q==">

  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>


  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</form>

